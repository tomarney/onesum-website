---
import HeadCommon from '../components/HeadCommon.astro';
import HeadSEO from '../components/HeadSEO.astro';
import { SITE } from '../siteData';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

const { frontmatter = {} } = Astro.props;
---

<html dir="ltr" lang="en-gb">
  <head>
    <HeadCommon />
    <HeadSEO />
    <title>
      {frontmatter.title ? `${frontmatter.title} | ${SITE.title}` : SITE.title}
    </title>
  </head>

  <body>
    <div class="bg-gradient-to-tr to-purple-700 from-indigo-900">
      <Nav />
      <slot name="hero"/> {/* use <div slot="hero">hero contents</div>*/}
    </div>
    <main>
      <slot /> {/* all children with no slot attribute go here */}
    </main>
    <Footer />
  </body>
</html>
