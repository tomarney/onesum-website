---
import HeadCommon from '../components/HeadCommon.astro';
import HeadSEO from '../components/HeadSEO.astro';
import { SITE } from '../siteData';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

export interface Props {
	frontmatter?: any;
	hero?: boolean;
}

const { frontmatter = {}, hero = false } = Astro.props;
---

<html dir="ltr" lang="en-gb">
  <head>
    <HeadCommon />
    <HeadSEO />
    <title>
      {frontmatter.title ? `${frontmatter.title} | ${SITE.title}` : SITE.title}
    </title>
  </head>

  <body>
    <div class={`bg-gradient-to-tr from-indigo-700 ${hero ? 'to-purple-700 xs:rounded-bl-[50vw] lg:rounded-bl-[33vw]' : 'to-blue-900'}`}>
      <Nav />
      <slot name="hero"/> {/* use <div slot="hero">hero contents</div>*/}
    </div>
    <main>
      <slot /> {/* all children with no slot attribute go here */}
    </main>
    <Footer />
  </body>
</html>
